<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">Contact Page</h3>
  </div>
  <div class="panel-body">

    <div class="form-group {{feedback-classes length=model.email.length isValid=model.isEmailValid}}">
      {{input value=model.email class="form-control" type="email" placeholder="Your email..." autofocus="true"}}
      {{feedback-icon model=model.isEmailValid}}
    </div>
    <div class="form-group {{feedback-classes length=model.message.length isValid=model.isMessageValid}}">
      {{textarea value=model.message class="form-control" placeholder="Your message. (At least 5 characters.)" rows="7" required="true"}}
      {{feedback-icon model=model.isMessageValid}}
    </div>

    {{#if responseMessage}}
      <div class="alert alert-success">{{responseMessage}}</div>
    {{/if}}

  </div>
  <div class="panel-footer">
    <button disabled="{{unless model.isSubmitButtonEnabled 'disabled'}}" type="button" class="btn btn-primary" {{action 'sendMessage' model}}>Send message</button>
  </div>
</div>
