<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">Contact Page</h3>
  </div>
  <div class="panel-body">
    <div class="form-group">
      {{input value=email class="form-control" type="email" placeholder="Your email..." autofocus="true"}}
      <br>
      {{textarea value=message class="form-control" placeholder="Your message. (At least 5 characters.)" rows="7" required="true"}}
    </div>
  </div>
  <div class="panel-footer">
    <button disabled="{{unless isValid 'disabled'}}" type="button" class="btn btn-primary">Send message</button>
  </div>
</div>
